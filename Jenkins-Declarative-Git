

pipeline{
    agent any
    
     environment{
        PATH = "/opt/apache-maven-3.6.3/bin:$PATH"
             }
    
   
   
       stages{
        stage("Git Checkout"){
            steps{
                git credentialsId: 'jenkins', url: 'https://github.com/vasarao/myweb.git'
            }
        }
        stage("Maven Build"){
            steps{
                sh "mvn clean package"
                sh "mv target/*.war target/myweb.war"
            }
        }
                      }
             }
        
        }
        
           
       
